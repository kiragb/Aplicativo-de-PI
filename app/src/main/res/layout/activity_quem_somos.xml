<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFDF9"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFDF9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1300dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.002">

            </Button>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="111dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-25dp"
                android:layout_marginTop="-50dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/adlery"
                android:gravity="center"
                android:text="BRINK+"
                android:textColor="#2E0084"
                android:textSize="40dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintHorizontal_bias="0.182"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                app:layout_constraintVertical_bias="1.0">

            </TextView>


            <ImageView
                android:id="@+id/menu"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-40dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                app:layout_constraintVertical_bias="0.647"
                app:srcCompat="@drawable/ic_baseline_menu_24" />


            <TextView
                android:layout_width="333dp"
                android:layout_height="31dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/bryndan"
                android:gravity="center"
                android:text="QuEm SoMoS"
                android:textAllCaps="false"
                android:textColor="#454040"
                android:textSize="30sp">

            </TextView>

            <ImageView
                android:layout_width="334dp"
                android:layout_height="1100dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:src="@drawable/borda_quemsomos">

            </ImageView>

            <TextView
                android:layout_width="302dp"
                android:layout_height="717dp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="-1090sp"
                android:fontFamily="@font/bryndan"
                android:justificationMode="inter_word"
                android:lineHeight="30sp"
                android:text="  Somos um grupo de estudantes do Instituto Federal de São Paulo Campus Campinas e o nosso projeto foi desenvolvido com o intuito de ajudar especialmente crianças que possuem deficiência intelectual ou que apresentam apenas uma maior dificuldade em se desenvolver no seu raciocínio lógico."
                android:textColor="#201F1F"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="302dp"
                android:layout_height="140dp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="-412sp"
                android:fontFamily="@font/bryndan"
                android:justificationMode="inter_word"
                android:lineHeight="30sp"
                android:text=" Procuramos proporcionar à criança um aprendizado simplificado e divertido, buscando sempre entretê-la e atraí-la da melhor forma."
                android:textColor="#201F1F"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="302dp"
                android:layout_height="420dp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="1sp"
                android:fontFamily="@font/bryndan"
                android:justificationMode="inter_word"
                android:lineHeight="30sp"
                android:text="   O nosso aplicativo Brink+ traz meios de ensino através de tutoriais de brinquedos sensoriais e vídeos educativos, desde ações do dia-a-dia, como também relacionados ao meio ambiente e músicas infantis. Além disso, há também uma aba elaborada para os pais ou responsáveis, onde será possível acessar dicas para melhorar o comportamento e concentração da criança, e outra aba para explicar o que é DI (Deficiência Intelectual)."
                android:textColor="#201F1F"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="302dp"
                android:layout_height="290dp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/bryndan"
                android:justificationMode="inter_word"
                android:lineHeight="30sp"
                android:text="    Se você quiser, pode também acessar o nosso site clicando:"
                android:textColor="#201F1F"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/activity_main_link"
                android:layout_width="345dp"
                android:layout_height="90dp"
                android:layout_marginLeft="150sp"
                android:layout_marginTop="-225sp"
                android:fontFamily="@font/bryndan"
                android:justificationMode="inter_word"
                android:lineHeight="30sp"
                android:text="@string/hyperlink"
                android:textColor="#D6417D"
                android:textSize="23sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="302dp"
                android:layout_height="390dp"
                android:layout_marginTop="-55sp"
                android:layout_marginLeft="35sp"
                android:fontFamily="@font/bryndan"
                android:justificationMode="inter_word"
                android:lineHeight="30sp"
                android:text="   Esperamos que desfrute e faça bom proveito do nosso aplicativo!"
                android:textColor="#201F1F"
                android:textSize="23sp"
                android:textStyle="normal" />


            <ImageView
                android:id="@+id/gotas"
                android:layout_width="70dp"
                android:layout_height="68dp"
                android:layout_marginLeft="45sp"
                android:layout_marginTop="-1465dp"
                app:srcCompat="@drawable/gotas" />

            <ImageView
                android:id="@+id/gotas2"
                android:layout_width="70dp"
                android:layout_height="68dp"
                android:layout_marginLeft="270sp"
                android:layout_marginTop="-70dp"
                android:rotationY="180"
                app:srcCompat="@drawable/gotas" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
